<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <ScrollView android:id="@+id/apocalipse_scroll_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/message_margin_frame_left"
                android:paddingRight="@dimen/message_margin_frame_right"
                android:paddingTop="@dimen/margin_frame"
                android:paddingBottom="@dimen/margin_frame"
                android:scrollbarSize="6dp"
            >

    <WebView
            android:id="@+id/apocalipse_text"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/main_bg_color"
            android:text="Тут апокалиптическое сообщение"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    <Button
            android:id="@+id/apocalipse_button"
            android:background="@drawable/button_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/apocalipse_text"
            android:clickable="true"
            android:paddingBottom="8dp"
            android:paddingTop="6dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:layout_marginBottom="20dp"
            android:text="кнопка"
            android:textSize="15dp"
            />
    </ScrollView>
</LinearLayout>